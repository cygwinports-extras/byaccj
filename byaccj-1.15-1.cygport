DESCRIPTION="Berkeley YACC with Java support"
HOMEPAGE="http://byaccj.sourceforge.net/"
SRC_URI="mirror://sourceforge/byaccj/${PN}${PV}_src.tar.gz"
SRC_DIR=${PN}${PV}

src_compile() {
	lndirs
	cd ${B}/src
	verbose ${CC} ${CFLAGS} -o byaccj.exe *.c || error "byaccj compile failed"
}

src_install() {
	cd ${B}/src
	dobin byaccj.exe
	dodoc README new_features no_warranty
}
